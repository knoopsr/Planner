@page "/login"
@using System.ComponentModel.DataAnnotations
@using Models.Account
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager Navigation

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="min-width: 350px; max-width: 400px;">
        <div class="card-body">
            <h3 class="text-center mb-4">🔐 Aanmelden</h3>

            <EditForm Model="@model" OnValidSubmit="Authenticate" FormName="LoginForm">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label for="username" class="form-label">Gebruikersnaam</label>
                    <InputText id="username" class="form-control" @bind-Value="model.Email" />
                    <ValidationMessage For="() => model.Email" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Wachtwoord</label>
                    <InputText id="password" class="form-control" type="password" @bind-Value="model.Password" />
                    <ValidationMessage For="() => model.Password" />
                </div>
                <div class="mb-3 text-center">
                    <span class="text-danger">@errorMessage</span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Inloggen</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>


@code {
    private LoginModel model = new();
    private string? errorMessage;

    private async Task Authenticate()
    {
        if (model.Email == "demo@demo.be" && model.Password == "test123")
        {
            errorMessage = null;
            Navigation.NavigateTo("/planner");
        }
        else
        {
            errorMessage = "Ongeldige gebruikersnaam of wachtwoord.";
        }

    }


}
